---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const beers = await getCollection("beers");
---

<Layout title="Beers for developers">
	<main>
		<h1 class="text-center text-7xl font-extrabold mb-20">
			Dev <span class="block">Beer</span>
		</h1>

		<section aria-label="Beers">
			<div class="px-4 mx-auto max-w-screen-xl">
				<div class="grid gap-6 md:grid-cols-2">
					{
						beers.map((beer) => {
							const { slug, data } = beer;

							const {
								title,
								img,
								auth,
								desc,
								alcohol_content,
								style,
								buy,
							} = data;

							return (
								<article class="flex bg-gray-700 p-6 rounded-lg">
									<a
										href={buy}
										class="mb-2 xl:mb-0 transition hover:scale-110"
									>
										<img
											src={`/images/${img}`}
											alt={title}
											class="mr-5 w-48 w-25 rounded-lg"
										/>
									</a>

									<div class="flex flex-col justify-center">
										<h2 class="mb-2 text-2xl font-bold leading-tight">
											{title}
										</h2>
										<p class="mb-4 max-w-sm">{auth}</p>
										<p class="mb-4 max-w-sm">{desc}</p>
										<p class="mb-4 max-w-sm">
											<strong>Alcohol content:</strong>{" "}
											{alcohol_content}%
										</p>
										<p class="mb-4 max-w-sm">
											Style: {style}
										</p>
									</div>
								</article>
							);
						})
					}
				</div>
			</div>
		</section>
	</main>
</Layout>
